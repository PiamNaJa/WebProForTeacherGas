<%- include("../partials/admin_header.ejs") %>
<h1>Albums Data</h1>
<input type="text" class="form-control w-100 mt-2" id="search" placeholder="Search Album Title" onkeyup="Filter()">
<div class="table-responsive">
    <table class="table table-striped table-sm sortable" id="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Artist</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
          <% let i = 1; %> 
        <% albums.forEach((album)=>{ %> 
        <tr>
          <td><p class="mt-4 mb-0"><%= i++ %></p></td>
          <td><img src="<%= album.image %>" width="70" height="70" class="artist--img"></td>
          <td><p class="mt-4 mb-0" id="title"><%= album.name %></p></td>
          <td><p class="mt-4 mb-0"><%= album.artist.name %></p></td>
          <td>
            <form action="/admin/album/<%= album._id %>?_method=DELETE" method="post">
              <a href="/admin/album/<%= album._id %>/edit" class="btn btn-warning mt-3"id="editBt">Edit</a>
              <button type="submit" class="btn btn-danger mt-3" id="deleteBt">Delete</button>
            </form>
              
          </td>
        </tr>
        <% }); %> 
      </tbody>
    </table>
</div>
<%- include("../partials/admin_footer.ejs") %>