<%- include("../partials/header.ejs") %>
<div class="container">
    <h1 class="display-5">Add New Album</h1>
    <form action="/album/new" method="post">
        <div class="mb-3">
            <label class="form-label">URL</label>
            <input type="text" class="form-control" name="image" placeholder="Image URL" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Album Title</label>
            <input type="text" class="form-control" name="name" placeholder="Album Title" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Artist</label>
            <input class="form-control" name = "artist" list="Artistdatalist" id="exampleDataList" placeholder="Select Artist" autocomplete="off" required>
            <datalist id="Artistdatalist">
                <% artist.forEach((artist)=>{ %>
                    <option value=<%= artist._id %>><%= artist.name %></option>
                <% }); %>
            </datalist>  
        </div>

        <button type="submit" class="btn btn--submit">Submit</button>
        <a href="/song/new">Go back</a>
    </form>
</div>


