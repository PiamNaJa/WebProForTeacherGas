<%- include("../partials/header.ejs") %>
<div class="container">
    <h1 class="display-5">Add new music</h1>
    <form action="/song" method="post">
        <div class="mb-3">
            <label class="form-label">Music Name</label>
            <input type="text" class="form-control" name="name" placeholder="Print Name" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Artist</label>
            <!-- <input type="text" class="form-control" name="artist" placeholder="Artist" required> -->
            <input class="form-control" name = "artist" list="datalistOptions" id="exampleDataList" placeholder="Select Artist" required>
            <datalist id="datalistOptions">
                <% artist.forEach((artist)=>{ %>
                    <option value=<%= artist._id %>><%= artist.name %></option>
                <% }); %>
            </datalist>  
        </div>
          
        <div class="mb-3">
            <label class="form-label">Genre</label>
            <input type="text" class="form-control" name="genre" placeholder="Genre" required>
        </div>
        
        <div class="mb-3">
            <label class="form-label">URL</label>
            <input type="text" class="form-control" name="image" placeholder="Image URL" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Lyrics</label>
            <textarea type="text" class="form-control" name="lyric" placeholder="Lyrics"></textarea>
        </div>
        <button type="submit" class="btn btn--submit">Submit</button>
        <a href="/">Go back</a>
        <a href="/artist/new">Add New Artist</a>
    </form>
</div>


<%- include("../partials/footer.ejs") %>