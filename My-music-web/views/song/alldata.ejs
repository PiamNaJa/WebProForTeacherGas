<%- include("../partials/admin_header.ejs") %>
<h1>Songs Data</h1>
<input type="text" class="form-control w-100 mt-2" id="songsSearch" placeholder="Search Song Title" onkeyup="Filter()">
<div class="table-responsive">
    <table class="table table-striped table-sm" id="songtable">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Title</th>
          <th scope="col">Artist</th>
          <th scope="col">Album</th>
          <th scope="col">Fav</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
          <% let i = 1; %> 
        <% songs.forEach((song)=>{ %> 
        <tr id="songs__list">
          <td><%= i++ %></td>
          <td><p class="mb-0" id="song-title"><%= song.name %></p></td>
          <td><%= song.artist.name %></td>
          <td><%= song.album.name %></td>
          <td><%= song.fav %></td>
          <td>
              <a href="#" class="text-black" onclick="confirmBox()">Edit</a>
              <a href="#" class="text-danger" onclick="confirmBox()">Delete</a>
          </td>
        </tr>
        <% }); %> 
      </tbody>
    </table>
</div>
<%- include("../partials/admin_footer.ejs") %>