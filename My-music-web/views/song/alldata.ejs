<%- include("../partials/admin_header.ejs") %>
<h1>Songs Data</h1>
<input type="text" class="form-control w-100 mt-2" id="search" placeholder="Search Song Title" onkeyup="Filter()">
<div class="table-responsive">
    <table class="table table-striped table-sm sortable" id="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Image</th>
          <th scope="col">Title</th>
          <th scope="col">Artist</th>
          <th scope="col">Album</th>
          <th scope="col">Favorite</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
          <% let i = 1; %> 
        <% songs.forEach((song)=>{ %> 
        <tr>
          <td><p class="mt-4 mb-0"><%= i++ %></p></td>
          <td><img src="<%= song.image %>" width="70" height="70" class="song--img"></td>
          <td><p class="mt-4 mb-0" id="title"><%= song.name %></p></td>
          <td><p class="mt-4 mb-0"><%= song.artist.name %></p></td>
          <td><p class="mt-4 mb-0"><% if(song.album){ %> <%= song.album.name %></p><% } %> </td>
          <td><p class="mt-4 mb-0"><%= song.fav %></p></td>
          <td>
            <form action="/admin/song/<%= song._id %>?_method=DELETE" method="post">
              <a href="/admin/song/<%= song._id %>/edit" class="btn btn-warning mt-3"id="editBt">Edit</a>
              <button type="submit" class="btn btn-danger mt-3" id="deleteBt">Delete</button>
            </form>
            
          </td>
        </tr>
        <% }); %> 
      </tbody>
    </table>
</div>
<%- include("../partials/admin_footer.ejs") %>