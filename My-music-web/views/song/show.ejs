<%- include("../partials/header.ejs") %>

<div class="container-fluid pt-0 ps-0">
  <div class="p-1 p-md-3 mb-2 text-white rounded bg-dark">
    <div class="col-md-6 px-0 d-flex">
      <img class="me-3 songinfo--img" src="<%= song.image %>" width="150px" height="150px">
      <div class="d-block">
        <h3 class="m-0"><%= song.name %></h3>
        <a href="/artist/<%= song.artist._id %>" class="mb-1 text-white songinfo--artist"><%= song.artist.name %></a>
        <p class="mb-1 songinfo--genre">Genre : <%= song.genre %></p>
        <p class="mb-1 songinfo--date">Release Date :
          <%= song.release.getDate() %>/<%= song.release.getMonth() %>/<%= song.release.getFullYear() %></p>
        <button class="btn btn--play bg-white">
          <img class="mb-2" src="/icon/blue_play.png" alt="play">
          <p class="d-inline m-0">Play</p>
        </button>
        <button class="btn btn--fav p-0 ms-2">
          <img src="/icon/OutlineHeart.png" alt="Favorite">
        </button>
        <button class="btn btn--addplaylist p-0 ms-2">
          <img src="/icon/addplaylist.png" alt="play">
        </button>
      </div>
    </div>
  </div>


  <div class="row g-5">
    <div class="col-md-8">
      <h2>Lyrics</h2>
      <p class="d-inline lyric"><%= song.lyric %> </p>
    </div>

    <div class="col-md-4">
      <div class="position-sticky" style="top: 4rem;">
        <div class="p-4 mb-3 bg-dark rounded">
          <h4 class="fst-italic">About</h4>
          <p class="mb-0">Customize this section to tell your visitors a little bit about your publication, writers,
            content, or something else entirely. Totally up to you.</p>
        </div>
      </div>
    </div>
  </div>

</div>

<%- include("../partials/footer.ejs") %>