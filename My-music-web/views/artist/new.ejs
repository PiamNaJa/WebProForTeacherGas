<%- include("../partials/header.ejs") %>
<div class="container">
    <h1 class="display-5">Add your artist</h1>
    <form action="/artist" method="post">
        <div class="mb-3">
            <label class="form-label">URL</label>
            <input type="text" class="form-control" name="image" placeholder="Image URL" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Artist Name</label>
            <input type="text" class="form-control" name="name" placeholder="Artist Name" required>
        </div>
        <button type="submit" class="btn btn--submit">Submit</button>
        <a href="/song/new">Go back</a>
    </form>
</div>


