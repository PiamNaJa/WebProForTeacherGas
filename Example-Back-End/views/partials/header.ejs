                <a class="nav-link" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/register">Register</a>
              </li>
              <% } else { %>
                <li class="nav-item">
                  <a class="nav-link" href="#">Logged as <%= currentUser.username %></a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
                <%}%> 
